@model LeaseResult

@{
    ViewBag.Title = "Leasing Results";
    Layout = null;
}

<style>
    table {
        border-collapse: collapse;
        margin: 20px auto;
        width: 80%;
    }
    th, td {
        border: 1px solid #cccccc;
        padding: 8px;
        text-align: center;
    }
    th {
        background-color: #f2f2f2;
    }
    h2 {
        text-align: center;
        margin-top: 20px;
    }
</style>

<h2>Leasing Result</h2>
<table>
    <tbody>
        <tr>
            <th>Annual Percentage Cost</th>
            <td>@(Model.AnnualCostPercent + "%")</td>
        </tr>
        <tr>
            <th>Total Paid with Fees</th>
            <td>@Model.TotalPaid</td>
        </tr>
        <tr>
            <th>Total Fees</th>
            <td>@Model.TotalFees</td>
        </tr>
    </tbody>
</table>
